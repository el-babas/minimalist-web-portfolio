---
import { certificates } from "@data";

import Section from "@/components/Section.astro";

import CertificateIcon from "@/icons/certificate.astro";
---

<Section title="CertificaciÃ³n">
    <div>
        {
            certificates.map(({ name, date, issuer, url }) => {
                const dt = new Date(date);
                const time = `${dt.toLocaleDateString("es-PE", { month: "short", timeZone: "UTC" })} ${dt.getUTCFullYear()}`;
                return (
                    <article>
                        <p>
                            <CertificateIcon />
                            <a
                                href={url}
                                title="Ver certificado"
                                target="_blank"
                            >
                                {name}
                            </a>
                            <span>{issuer}</span>
                        </p>
                        <time>{time}</time>
                    </article>
                );
            })
        }
    </div>
</Section>

<style>
    div {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    article {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    article p {
        text-align: left;
    }

    article a {
        color: #222;
        font-weight: 500;
    }

    article a:hover {
        text-decoration: underline;
    }

    time {
        color: #444;
        font-size: 0.85rem;
        min-width: 102px;
        cursor: default;
        text-align: right;
    }
</style>
